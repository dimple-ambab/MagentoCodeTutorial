<?xml version="1.0"?>
<config>
    <modules>
        <Boolfly_Checkout>
            <version>0.1.0</version>
        </Boolfly_Checkout>
    </modules>
    <global>
        <blocks>
            <boolfly_checkout>
                <class>Boolfly_Checkout_Block</class>
            </boolfly_checkout>
            <checkout>
                <rewrite>
                    <onepage>Boolfly_Checkout_Block_Onepage</onepage>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <boolfly_checkout>
                <class>Boolfly_Checkout_Helper</class>
            </boolfly_checkout>
        </helpers>
        <models>
            <checkout>
                <rewrite>
                    <type_onepage>Boolfly_Checkout_Model_Checkout_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
        </models>
    </global>
    <frontend>
        <routers>
            <boolfly_checkout>
                <use>standard</use>
                <args>
                    <module>Boolfly_Checkout</module>
                    <frontName>addStepCheckout</frontName>
                </args>
            </boolfly_checkout>
            <checkout>
                <args>
                    <modules>
                        <boolfly_checkout before="Mage_Checkout">Boolfly_Checkout</boolfly_checkout>
                    </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <boolfly_checkout>
                    <file>boolfly/checkout/onepage.xml</file>
                </boolfly_checkout>
            </updates>
        </layout>
    </frontend>
</config>